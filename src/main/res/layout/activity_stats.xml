            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:paddingLeft="2dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:text="@string/winners"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/stat7"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/w_player1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:paddingRight="2dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/w_player1_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:background="@color/green"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/w_player2_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="@color/black"
            android:background="@color/orange"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/w_player2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:paddingLeft="2dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:text="@string/forced"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/stat8"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/fer_player1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:paddingRight="2dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fer_player1_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:background="@color/green"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/fer_player2_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="@color/black"
            android:background="@color/orange"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/fer_player2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:paddingLeft="2dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:text="@string/unforced"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/stat9"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/unf_player1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:paddingRight="2dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/unf_player1_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:background="@color/green"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/unf_player2_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="@color/black"
            android:background="@color/orange"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/unf_player2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:paddingLeft="2dp"
            android:textStyle="bold" />
